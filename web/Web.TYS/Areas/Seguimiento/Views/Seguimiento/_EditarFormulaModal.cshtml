@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.FormulaModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("EditarFormulaModal", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Modificar Fórmula </h4>
        <small class="font-bold">Digitar los datos necesarios para el registro.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label col-md-4">Nombre :</label>
                    @Html.HiddenFor(model => model.idformula)
                    <div class="col-md-6">@Html.TextBoxFor(model => model.nombre, "", new { @class = "form-control input-sm", @placeholder = "Nombre", @required = "True"})</div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Concepto :</label>
                    <div class="col-md-4 focus"> @Html.DropDownListFor(m => m.aux, (SelectList)ViewData["ListadoConcepto"], "--Seleccionar--", new { @class = "form-control input-sm", @id = "ddlConcepto", @tabindex = 1, @autofocus = "autofocus" })</div>
                    <label class="control-label col-md-2">Operación :</label>
                    <div class="col-md-4 focus"> @Html.DropDownListFor(m => m.operacion, (SelectList)ViewData["ListadoOperacion"], "--Seleccionar--", new { @class = "form-control input-sm", @id = "ddlOperacion", @tabindex = 1, @autofocus = "autofocus" })</div>

                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Fórmula :</label>
                    <div class="col-md-6">@Html.TextBoxFor(model => model.formula, "", new { @class = "form-control input-sm", @placeholder = "Formula", @required = "True", @tabindex = 3 })</div>
                </div>
                <div class="form-group">
                    <label class="control-label">Activo :</label>
                    @Html.CheckBoxFor(model => model.activo, new { @class = "form-control input-sm" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
                    <button type="button" onclick="LimpiarFormula()" class="btn  btn-outline btn-default btn-sm"><i class="fa fa-times-eraser"></i>  Limpiar</button>
                    <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>


                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer"></div>
}