@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.DespachoModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}

@using (Ajax.BeginForm("SalidaVehiculo", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction_salidavehiculo(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Salida Vehículo</h4>
        <small class="font-bold">Digitar los datos necesarios para la salida de vehículo.</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @*<label class="control-label col-md-2">Placa:</label>
                        <label class="control-label col-md-1">@Model.placa</label>*@
                        <label class="control-label col-md-2">Peso:</label>
                        <label class="control-label col-md-4">@Model.peso</label>
                        <label class="control-label col-md-2">Volumen:</label>
                        <label class="control-label col-md-4">@Model.vol</label>
                        @Html.HiddenFor(x => x.idvehiculo)
                    </div>
                 
                    
                    <div class="form-group">
                        <label class="col-md-2 control-label">Fecha :</label>
                        <div class="col-md-4">
                            <div class="input-group date" id='dtpfechacomp'>
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    @Html.TextBoxFor(model => model.fechasalida, "{0:dd/MM/yyyy}", new { @placeholder = "Fecha Confirmación", @class = "form-control", @required = "true" })
                                </div>
                            </div>
                        </div>
                        <label class=" col-md-2 control-label">Hora (24hrs):</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.horasalida, new { @placeholder = "00:00hrs", @class = "form-control", @required = "true" })
                        </div>
                    </div>
                 </div>
                        
      </div>
        
    </div>
    <div class="modal-footer">
        <div class="col-md-offset-6 col-md-3">
            <button type="submit" class="btn  btn-block btn-primary"> Guardar</button>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn  btn-block btn-inverse" data-dismiss="modal">  Cerrar</button>
        </div>
       
    </div>
}