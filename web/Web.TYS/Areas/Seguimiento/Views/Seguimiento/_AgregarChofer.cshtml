@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.ChoferModel


@using (Ajax.BeginForm("AgregarChofer", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Agregar Chofer</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro del nuevo chofer.</small>
    </div>
    <div class="modal-body">
        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label  col-md-2">Nombres :</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.nombrechofer, new { @minlenght = "5", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label  col-md-2 ">Apellidos :</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.apellidochofer, new { @minlenght = "5", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 ">DNI :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.dni, new { @maxlength = "10", @class = "form-control",@onkeypress = "return validateFloatKeyPress(this,event);", @required = "true" })
                    </div>
                    <label class="control-label col-md-2">Brevete :</label>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.brevete, new { @minlength = "5", @maxlength = "50" , @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 ">Teléfono :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.telefono, new {  @maxlength = "10" ,type = "Number", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Dirección:</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.direccionchofer, new { @minlength = "5", @maxlength = "150" , @class = "form-control", @required = "true" })
                    </div>
                </div>
            </div>


        </div>
     </div>
    <div class="modal-footer">

        <div class="form-group">
            <div class="col-md-3 col-md-offset-6">
                <button type="submit" class="btn  btn-primary "> Guardar</button>
            </div>
            <div class="col-md-3">
                <button type="button" onclick="" class="btn  btn-inverse" data-dismiss="modal">Cancelar</button>

            </div>
        </div>

    </div>
}