@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.VehiculoModel


@using (Ajax.BeginForm("AgregarVehiculoModal", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Agregar Vehiculo</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la nueva moneda.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label col-md-2">Proveedor :</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.idproveedor, (SelectList)ViewData["ListadoProveedores"], "[Proveedor]", new { @class = "chosen-select form-control"  , @required = "true"  })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label  col-md-2">Marca :</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.idmarca, (SelectList)ViewData["ListadoMarca"], "[Marca]", new {  @class = "form-control",  @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label  col-md-2 ">Tipo :</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.idtipo, (SelectList)ViewData["ListaTipoVehiculo"], "[Tipo]", new { @class = "form-control",  @required = "true" })
                    </div>
                    <label class="control-label  col-md-2 ">Modelo :</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.idmodelo, (SelectList)ViewData["ListadoModelo"], "[Modelo]", new {  @class = "form-control",  @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 ">Placa :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.placa, new { @maxlength = "10", @class = "form-control",  @required = "true" })
                    </div>
                    <label class="control-label col-md-2">Año :</label>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.idanio, new {@min = "1950", @max = "2050", @type = "Number", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 ">Color :</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.idcolor, (SelectList)ViewData["ListadoColor"], "[Color]", new { @class = "form-control"})
                    </div>
                    <label class="control-label col-md-2">Reg. MTC :</label>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.regmtc, new { @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 ">Conf. Veh. :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.confveh, new { @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>
                    <label class="control-label col-md-2">Peso Bruto:</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.pesobruto, new { @maxlength = "6", @onkeypress =  "return validateFloatKeyPress(this,event)" , @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 ">Carga Util :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.cargautil, new { @maxlength = "6", @onkeypress = "return validateFloatKeyPress(this,event)", @class = "form-control", @required = "true" })
                    </div>
                    <label class="control-label col-md-2">Volumen :</label>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.seriemotor, new { @onkeypress = "return validateFloatKeyPress(this,event)", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2 ">Combust. :</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.idcombustible, (SelectList)ViewData["ListadoCombustible"], "[Combustible]", new { @id = "ddlUbigeo", @class = "form-control" })
                    </div>
                    <label class="control-label col-md-2"> Kilometr. :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.kilometraje, new { @maxlength = "6", @onkeypress =  "return validateFloatKeyPress(this,event)", @class = "form-control" })
                    </div>
                </div>

            </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <button type="submit" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" onclick="" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
                    </div>
                    </div>
                    </div>
           
     </div>
            <div class="modal-footer"></div>
            <div class="modal inmodal fade" id="modalcontainerot" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
            <div id="modalcontentot" class="modal-content">

            </div>
        </div>
    </div>
}