@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.ClienteModel

@using (Ajax.BeginForm("AgregarClienteModal", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Editar Cliente</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la nueva moneda.</small>
    </div>
    <div class="modal-body">
        <div class="row">

            <div class="col-md-12">

                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">RUC :</label>
                        @Html.TextBoxFor(model => model.ruc, new { @minlength = "8", @maxlength = "11", @class = "form-control", @onkeypress = "return validateFloatKeyPress(this,event);", @required = "true" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Nombre Corto:</label>
                        @Html.TextBoxFor(model => model.nombrecorto, new { @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Razón Social / Nombre :</label>
                        @Html.TextBoxFor(model => model.razonsocial, new { @maxlength = "50", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Ubigeo :</label>
                        @Html.DropDownListFor(model => model.iddistrito, (SelectList)ViewData["listaubigeos"], "[Ubigeo]", new { @id = "ddlUbigeo", @class = "chosen-select form-control", @data_url = @Url.Action("JsonGetDatosDireccion", "Seguimiento") })
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">Cod. Dirección :</label>
                        @Html.TextBoxFor(model => model.codigodireccion, new { @placeholder = "Código", @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-8">
                        <label class="control-label">Dirección :</label>
                        @Html.TextBoxFor(model => model.direccion, new { @placeholder = "Dirección Principal", @maxlength = "100", @class = "form-control", @required = "true" })

                    </div>
                </div>

                <div class="form-group">


                    <div class="col-md-4">
                        <label class="control-label">Moneda Crédito :</label>
                        @Html.DropDownListFor(m => m.idmonedalinea, (SelectList)ViewData["ListaMoneda"], "[Moneda]", new { @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Línea Crédito :</label>
                        @Html.TextBoxFor(model => model.lineacredito, "{0:0.00}", new { @maxlength = "7", @class = "form-control numericOnly", @onkeypress = "return validateFloatKeyPress(this,event);", @required = "true" })
                    </div>
                    <div class="col-md-4">
                        @Html.CheckBoxFor(x => x.pagocontado)   <label>   Cliente pago contado. </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Archivo:</label>
                        @Html.TextBoxFor(model => model.rutalogo, "", new { @class = "form-control", @type = "file" })
                    </div>
                </div>
            </div>



        </div>

    </div>
    <div class="modal-footer">
        <div class="col-lg-offset-7 col-md-5">
            <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle-o"></i> Guardar</button>
            <button type="button" onclick="" class="btn  btn-inverse" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
        </div>
    </div>

    @Html.HiddenFor(model => model.idcliente)
    @Html.HiddenFor(model => model.iddireccion)
    @Html.HiddenFor(model => model.activo)
}