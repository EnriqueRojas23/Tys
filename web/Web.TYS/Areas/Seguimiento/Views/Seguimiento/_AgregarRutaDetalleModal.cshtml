@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.RutaModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@section scripts
{


}

@using (Ajax.BeginForm("AgregarDetalleRutaModal", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Agregar Detalle Ruta</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la nueva ruta.</small>
    </div>
    <div class="modal-body">
        <div class="row">

            <div class="col-md-12">

                <div class="form-group">
                    <label class="control-label col-md-2">Nombre :</label>
                     <div class="col-md-4">
                            @Html.TextBoxFor(model => model.nombre, new { @disabled = "false", @minlength = "2", @maxlength = "11", @class = "form-control input-sm", @required = "true" })
                            @Html.HiddenFor(model => model.idruta)
                    </div>
                 </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Origen:</label>
                    <div class="col-md-4"> @Html.DropDownListFor(model=>model.idorigen, (SelectList)ViewData["ListadoDepartamento"], "[Origen]", new { @class = "form-control input-sm" })</div>
                    <label class="control-label col-md-2">Departamento:</label>
                    <div class="col-md-4"> @Html.DropDownList("iddepartamento", (SelectList)ViewData["ListadoDepartamento"], "--Seleccionar--", new { @class = "form-control input-sm" })</div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Provincia :</label>
                    <div class="col-md-4"> @Html.DropDownList("idprovincia", Enumerable.Empty<SelectListItem>(), "[Provincias]", new { @class = "form-control input-sm" })</div>
                    <label class="control-label col-md-2">Distrito :</label>
                    <div class="col-md-4"> @Html.DropDownListFor(model=>model.iddistrito, Enumerable.Empty<SelectListItem>(), "[Distritos]", new { @class = "form-control input-sm" })</div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">KM. :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.km, new { @class = "form-control input-sm", @required = "true" })

                    </div>
                    <label class="control-label col-md-2">Modo Transporte:</label>
                    <div class="col-md-4"> @Html.DropDownListFor(model=>model.idtipotransporte, (SelectList)ViewData["ListaTipoTransporte"], "--Seleccionar--", new { @class = "form-control input-sm" })</div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Lead Ida :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.leadida, new { @class = "form-control input-sm", @required = "true" })

                    </div>
                    <label class="control-label col-md-2">Lead Retorno:</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.leadretorno, new { @class = "form-control input-sm", @required = "true" })
                    </div>
                    </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Lead Doc. :</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.leaddocumentario, new { @class = "form-control input-sm", @required = "true" })

                    </div>

                 </div>
                 <div class="form-group">
                        <label class="col-md-2 control-label">Etapas :</label>
                        <div class="col-md-4"> @Html.DropDownListFor(model => model.etapas, (SelectList)ViewData["ListaEtapas"], new { @multiple = "True", @class = "form-control input-sm" })</div>
                 </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <button type="submit" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" onclick="" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
                    </div>
                    </div>
                    </div>

     </div>
    <div class="modal-footer"></div>
    <div class="modal inmodal fade" id="modalcontainerot" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div id="modalcontentot" class="modal-content">

            </div>
        </div>
    </div>
}