@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.CargaModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AsignarVehiculoManifiesto", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction_asignarvehiculo(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Asignar Carga a Vehiculo</h4>
        <small class="font-bold">Seleccionar los datos necesarios para el registro.</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-12">
                   

                    <div class="form-group">
                        <label class=" col-md-2 control-label">Vehículo:</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(m => m.idvehiculo, (SelectList)ViewData["ListadoPlaca"], "[Placa]", new { @class = "chosen-select form-control input-sm", @required = "true" })
                        </div>
                      
                    </div>
                    <div class="form-group">
                        <label class=" col-md-2 control-label">Proveedor:</label>
                        <label id="proveedor" class="h5 col-md-4"></label>
                        <label class=" col-md-2 control-label">Chofer:</label>
                        <label id="chofer" class="h5 col-md-4"></label>
                     </div>
                     
                 </div>
           
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-offset-6 col-md-3">
            <button type="submit" class="btn btn-block btn-primary">  Asignar</button>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn btn-block btn-inverse" data-dismiss="modal">  Cerrar</button>
        </div>
    </div>
}