@model Web.TYS.Areas.Seguridad.Models.Usuarios.InsertarModificarAlertaModel
@section Styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsview/seguridad/seguridad.usuarios.listarusuarios.js")" type="text/javascript"></script>
}
    <form id="frmUsuarioModificar" role="form" method="post" class=" form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class=" panel-title">
               Configurar Alertas
            </h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">

                  
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="control-label">Usuario:</label>
                                    
                                        @Html.Label(@Model.Usr_str_red)

                                </div>
                            </div>
                        </div>

                    </div>
                 
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="control-label">Periodicidad :</label>
                                    @Html.DropDownListFor(model => model.idperiodicidad, Model.Peridiocidad, "[Seleccionar]", new { @id = "ddlUbigeo", @class = "chosen-select form-control", @data_url = @Url.Action("JsonGetDatosDireccion", "Seguimiento") })
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="control-label">Medio :</label>
                                    @Html.DropDownListFor(model => model.idmedio, Model.Medio, "[Seleccionar]", new { @id = "ddlUbigeo", @class = "chosen-select form-control", @data_url = @Url.Action("JsonGetDatosDireccion", "Seguimiento") })
                                </div>

                            </div>
                            <div class="col-md-4">
                                <label class="col-md-3 control-label">
                                    Estados: <br />
                                </label>
                            </div>
                            <div class="col-md-9">
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.pendienteProgramacion) <label>Pendiente de programación </label>
                                </div>
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.pendienteInicioCarga) <label>Pendiente de Inicio de Carga </label>
                                </div>
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.pendienteDespacho) <label>Pendiente de despacho </label>
                                </div>
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.EnRuta) <label>En Ruta </label>
                                </div>
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.Entregado) <label>Entregado </label>
                                </div>
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.Liquidado) <label>Liquidado. </label>
                                </div>
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.Facturado) <label>Facturado. </label>
                                </div>
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(model => model.Cerrado) <label>Cerrado. </label>
                                </div>


                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white" data-dismiss="modal">Cancelar</button>
            <button id="btnActualizarAlerta" type="button" data-url="@Url.Action("InsertarModificarAlerta", "Usuarios")" class="btn btn-primary">Actualizar</button>
        </div>
        @Html.HiddenFor(model => model.usr_int_id)
    </form>
