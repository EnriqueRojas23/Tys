@model Web.TYS.Areas.Seguridad.Models.Usuarios.InsertarModificarUsuarioModel
@section Styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsview/seguridad/seguridad.usuarios.listarusuarios.js")" type="text/javascript"></script>
}
    <form id="frmUsuarioModificar" role="form" method="post" class=" form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class=" panel-title">
                Modificar Usuario
            </h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">

                    <div class="form-group">
                        <label class=" col-md-3 control-label">Tipo de Acceso:</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.usr_str_tipoacceso, Model.ListaModoAutenticacion, new { @class = "form-control", @required = "true" })
                        </div>
                        </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Usuario:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Usr_str_red, new { @class = "form-control", @required = "true", placeholder = "Usuario de acceso" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Nombres:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Usr_str_nombre, new { @class = "form-control", @required = "true", placeholder = "Nombres" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Apellidos:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Usr_str_apellidos, new { @class = "form-control", @required = "true", placeholder = "Apellidos" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">EMail:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Usr_str_email, new { type = "email", @class = "form-control", @required = "true", placeholder = "ejemplo@dominio.com" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Cliente:</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.idclientes, (SelectList)ViewData["ListadoClientes"], "[Todos los Clientes]", new { @id = "ddlclientes" , @multiple = "multiple" , @class = "chosen-select form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Estación:</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.idestacionorigen, (SelectList)ViewData["ListaEstacion"], "[Todos las Sucursales]", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Provincia:</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.idprovincia, (SelectList)ViewData["ListadoProvincias"], "[Todos las Provincias]", new { @class = "form-control chosen-select" })
                        </div>
                    </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">
                                    Accesos: <br />
                                </label>

                                <div class="col-sm-7">
                                    @Html.CheckBoxFor(model => model.Usr_bool_bloqueado) <label>La cuenta esta bloqueada. </label>

                                    <div class="clearfix"></div>
                                    @Html.CheckBoxFor(model => model.Usr_bool_aprobado) <label> activo </label>
                                </div>
                            </div>
                        </div>

                    </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white" data-dismiss="modal">Cancelar</button>
            <button id="btnActualizar" type="button" data-url="@Url.Action("Modificar", "Usuarios")" class="btn btn-primary">Actualizar</button>
        </div>
        @Html.HiddenFor(model => model.Usr_int_id)
    </form>
        @Html.HiddenFor(x => x.clientes)