@model Web.TYS.Areas.Pago.Models.ProveedorModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AgregarProveedorModal", "Facturacion", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header" style="background-color: rgba(6, 117, 119, 0.37)">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Agregar Proveedor</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro del nuevo proveedor.</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">RUC :</label>
                        <input type="hidden" id="hdproveedor" class="form-control">
                          @Html.TextBoxFor(m => m.ruc, new { @class = "form-control", @required = "true" ,  @minlength="8", @maxlength="11" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Razón Social :</label>
                        @Html.TextBoxFor(m => m.razonsocial, new { @class = "form-control", @required = "true", @maxlength="50" })
                    </div>
                    <div class="form-group">
                        <button type="button" onclick="Guardar_NuevoProveedor()" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" onclick="CancelarOTP_onClick()" class="btn  btn-outline btn-danger btn-sm"><i class="fa fa-times-circle-o"></i>  Cancelar</button>

                    </div>
                </div>
           
        </div>
    </div>
    <div class="modal-footer"></div>
}