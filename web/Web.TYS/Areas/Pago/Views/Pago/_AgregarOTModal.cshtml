@model Web.TYS.Areas.Pago.Models.ComprobanteModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AgregarEtapaModal", "Facturacion", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Agregar Orden de Transporte</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la nueva moneda.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">N° Orden de Transporte :</label>
                    <input type="text" id="txtnumcp" class="form-control input-sm">
                </div>
                <div class="form-group">
                    <button type="button" onclick="BuscarOTPopUp_onClick()" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-search"></i> Agregar </button>
                  
                </div>
            </div>
            <div class="jqGrid_wrapper col-md-9">
                <table id="gridlistaots" data-dataurl="@Url.Action("JsonGetListarOT", "Facturacion", new { area = "Facturacion" })"></table>
                <div id="gridlistaotspager"></div>
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <button type="button" onclick="GuardarOTPopUp_onClick()" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-save"></i> Cerrar </button>
             </div>

            </div>
    </div>
    <div class="modal-footer"></div>
}