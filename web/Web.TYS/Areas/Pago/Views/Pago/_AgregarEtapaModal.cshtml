@model Web.TYS.Areas.Pago.Models.EtapaModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AgregarEtapaModal", "Pago", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Agregar Etapa</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la nueva moneda.</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Etapa :</label>
                            @Html.HiddenFor(m => m.idetapa)
                            @Html.TextBoxFor(m => m.etapa, new { @class = "form-control", @required = "true" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">¿Requiere OT? :</label>
                         @Html.CheckBoxFor(m => m.requiereot, new { @class = "form-control input-sm" })
                    </div>
                   
                    <div class="form-group">
                        <button type="submit" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>

                    </div>
                </div>
           
        </div>
    </div>
    <div class="modal-footer"></div>
}