@{
    ViewBag.Title = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Mantenimiento - Proveedores</h2>
        <ol class="breadcrumb">
           
            <li>
                <a><strong>Mantenimiento Proveedor</strong></a>
            </li>
        </ol>

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    @using (Ajax.BeginForm("RegistrarNuevaIncidencia", "Incidencia", new { area = "CIC" }, new AjaxOptions { HttpMethod = "POST", OnComplete = "OnCompleteTransaction_RegistrarIncidencia(xhr, status)" }, new { @role = "form", @id = "frmRegistrarIncidencia", @class = "form-horizontal" }))
{

        <div class="row ">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-info-circle"></i>  Filtro de búsqueda</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="form-group">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    <div class="row ">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-info-circle"></i>  Listado de Proveedores</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>

                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    <i class="fa fa-warning"></i> Seleccionar Producto Reclamado
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-12">
                                        <div class=" alert alert-info">
                                            <p> <i class="fa fa-info-circle"></i> Tener en cuenta que solo debe seleccionar un item de la lista para registrar la incidencia.</p>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <table id="tblIncidenciaDetalle" data-url="@Url.Action("JsonGetListarArticulosDocumento", "Incidencia")" data-urldetail="@Url.Action("JsonGetAgregarDetalleOfisis", "Incidencia")" data-urladd="@Url.Action("JsonGetAgregarDetalle", "Incidencia")" data-urldel="@Url.Action("JsonGetEliminarDetalle", "Incidencia")" width="100%" class="table table-striped table-bordered table-hover dataTables-Detalle">
                                            <tfoot>
                                                <tr>
                                                    <th></th>
                                                    <th>N°</th>
                                                    <th>Código</th>
                                                    <th>Descripción</th>
                                                    <th>IMEI</th>
                                                    <th>Garantía</th>
                                                    <th>Dentro Garantía</th>
                                                    <th>Cantidad</th>
                                                    <th>Descuento</th>
                                                    <th>Total</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
    </div>