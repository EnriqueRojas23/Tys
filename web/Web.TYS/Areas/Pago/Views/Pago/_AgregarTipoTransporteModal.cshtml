@model Web.TYS.Areas.Pago.Models.TipoTransporteModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AgregarTipoTransporteModal", "Facturacion", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Agregar Tipo de Transporte</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro del nuevo transporte.</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Tipo Transporte :</label>
                        <input type="hidden" id="hdidtipotransporte" class="form-control">
                          @Html.TextBoxFor(m => m.tipotransporte, new { @class = "form-control", @required = "" })
                    </div>
                   
                    <div class="form-group">
                        <button type="submit" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>

                    </div>
                </div>
           
        </div>
    </div>
    <div class="modal-footer"></div>
}