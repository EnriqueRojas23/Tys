@model Web.TYS.Areas.Facturacion.Models.ComprobanteModel


    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Nota de Crédito</h4>
        <small class="font-bold">Se muestran los datos de la Nota de Crédito.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <section class="widget widget-chart-changes">
                    <div class="widget-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">N° Nota Crédito:</p>
                                </div>
                                <div class="col-md-4">
                                    <p class="deemphasize" id="cantidadot_label"> <strong> @Model.numnotacredito</strong></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">Referencia:</p>
                                </div>
                                <div class="col-md-4">
                                    <p class="deemphasize" id="cantidadot_label"> <strong> @Model.numerocomprobante</strong></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">Señor(es):</p>
                                </div>
                                <div class="col-md-4">
                                    <p class="deemphasize" id="cantidadot_label"> <strong> @Model.razonsocial</strong></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">RUC:</p>
                                </div>
                                <div class="col-md-4">
                                    <p class="deemphasize" id="cantidadot_label"> <strong> @Model.ruc</strong></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">Fecha</p>
                                </div>
                                <div class="col-md-4">
                                    <p class="deemphasize" id="cantidadot_label"> <strong> @Model._fechaemision</strong></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">Dirección:</p>
                                </div>
                                <div class="col-md-4">
                                    <p class="deemphasize" id="cantidadot_label"> <strong> @Model.direccion.Substring(0, 40)</strong></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">Motivo anulación:</p>
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(m => m.idmotivoanulacion, (SelectList)ViewData["ListaMovitos"], " [ ---- ]", new { @class = "form-control input-sm", @required = "true" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <p class="deemphasize">Observación:</p>
                                </div>
                                <div class="col-md-10">
                                    <textarea id="txtdescripcion" cols="100" rows="2" maxlength="1000"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-md-5">
                                        <div class="col-md-6">
                                            <button type="button" id='addrow' class="btn  btn-line btn-block btn-sm btn-primary"><i class="fa fa-plus"></i> Agregar Item </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-11 jqGrid_wrapper">
                                        <table id="griddetallefactura"
                                               data-editurl="@Url.Action("GridSaveDetalle", "Facturacion","Facturacion")"></table>
                                        <div id="griddetallefacturapager"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-11">
                                <label class=" col-md-1 control-label">Sub Total:</label>
                                <div class="col-md-3">@Html.TextBoxFor(x => x.strsubtotal, new { @readonly = "True", @maxlength = 10, @onkeypress = "return SoloDecimal(event,this.value);", @class = "form-control" })  </div>
                                <label class=" col-md-1 control-label">IGV:</label>
                                <div class="col-md-3">@Html.TextBoxFor(x => x.strigv, new { @readonly = "True" , @maxlength = 10, @onkeypress = "return SoloDecimal(event,this.value);", @class = "form-control" })  </div>
                                <label class=" col-md-1 control-label">Total:</label>
                                <div class="col-md-3">@Html.TextBoxFor(x => x.strtotal, new { @readonly = "True", @class = "form-control" })  </div>

                            </div>
                        </div>
                    </div>
                  
                </section>

            </div>



        </div>
        </div>


    <div class="modal-footer">
        <div class="col-md-2 col-md-offset-8">
            <button id="btnGenNC" class="btn btn-primary btn-block" role="button">
                Generar
            </button>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-inverse btn-block" data-dismiss="modal"> Cerrar</button>
        </div>
             @Html.HiddenFor(x => x.idpreliquidacion)
             @Html.HiddenFor(x => x.idcomprobantepago)
             @Html.HiddenFor(x => x.descripcion)
    </div>

