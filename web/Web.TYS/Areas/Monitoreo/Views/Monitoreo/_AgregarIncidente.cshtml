@model Web.TYS.Areas.Monitoreo.Models.IncidenciaModel

@section Styles {


}

<datalist id="helps"></datalist>

@using (Ajax.BeginForm("AgregarIncidente", "Monitoreo", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction_Incidencia(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Agregar Incidentes</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la incidencia</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-12">
                    
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Incidente:</label>
                        <div class="col-md-6">
                            
                            @Html.DropDownListFor(m => m.idmaestroincidencia, (SelectList)ViewData["ListadoMaestroIncidente"], "[Incidencia]", new { @class = "form-control input-sm", @required = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" col-md-3 control-label">Descripción:</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(x => x.descripcion, new { @class = "form-control", @cols = 80, @rows = 2 })
                        </div>
                    </div>
                   <div class="form-group">
                        <label class=" col-md-3 control-label">Observaciones:</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(x => x.observacion, new {  @class = "form-control", @cols = 80, @rows = 2 })
                        </div>
                    </div>
                    <div id="divFecha" class="form-group">
                        <label class="col-md-3 control-label">Fecha de Incidente:</label>
                        <div class="col-md-4">
                            <div class="input-group date" id='dtpfechacomp'>
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    @Html.TextBoxFor(model => model.fechaincidencia, "{0:dd/MM/yyyy}", new { @placeholder = "Fecha Incidente", @class = "form-control", @required = "true" })
                                </div>
                            </div>
                        </div>
                        <label class="col-md-2 control-label">Hora:</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.horaincidencia, new { @placeholder = "00:00hrs", @class = "form-control", @required = "true" })
                        </div>
                    </div>

                    </div>
      </div>
        
    </div>
    <div class="modal-footer">
        @Html.HiddenFor(x => x.idsorden)
        <div class="col-md-offset-6 col-md-3">
            <button type="submit" class="btn btn-block btn-primary"> Guardar</button>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn btn-block btn-inverse" data-dismiss="modal"> Cerrar</button>
        </div>
    </div>
}