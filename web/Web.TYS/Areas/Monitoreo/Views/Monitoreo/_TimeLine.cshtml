@model Web.TYS.Areas.Monitoreo.Models.TimeLine

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AgregarIncidente", "Monitoreo", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Ciclo de vida de la Orden</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la incidencia</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-12">
                    <ul class="timeline">
                        @{int count = 0;}
                         @foreach (var item in @Model.Incidencias)
                        {
                            if(count++ % 2 == 0)
                            {
                                <li class="on-left">
                           
                                    <time class="event-time" datetime="2014-05-19 03:04">
                                        <span class="date">@item._fechaincidencia</span>
                                        <span class="time">@item.horaincidencia <span class="fw-semi-bold"></span></span>
                                    </time>
                                    <span class="event-icon event-icon-primary">
                                        <i class="glyphicon glyphicon-comment"></i>
                                    </span>
                                    <section class="event">
                                        <span class="thumb-sm avatar pull-left mr-sm">
                                            <i class="fa fa-hand-o-right fa-2x"></i>
                                        </span>
                                        <h4 class="event-heading"><a href="#">@item.codincidente</a> <small><a href="#"></a></small></h4>
                                        <p class="fs-sm text-muted">@item.fecharegistro</p>
                                        <p class="fs-mini">
                                           @item.descripcion
                                        </p>
                                        <footer>
                                            <ul class="post-links">
                                                @*<li><a href="#">@item.nombreusuario</a></li>*@
                                                <li><span class="text-danger"> Registrado por: </span></li>
                                                <li><span class="text-success"><i class="fa fa-barcode"></i> @item.nombreusuario</span></li>
                                                
                                                    @*<li><a href="#">Comment</a></li>*@
                                            </ul>
                                        </footer>
                                    </section>
                                </li>
                            }
                            else
                            {
                                       <li>
                           
                                    <time class="event-time" datetime="2014-05-19 03:04">
                                        <span class="date">@item._fechaincidencia</span>
                                        <span class="time">@item.horaincidencia <span class="fw-semi-bold"></span></span>
                                    </time>
                                    <span class="event-icon event-icon-success">
                                        <i class="glyphicon glyphicon-comment"></i>
                                    </span>
                                    <section class="event">
                                        <span class="thumb-sm avatar pull-left mr-sm">
                                            <i class="fa fa-hand-o-right fa-2x"></i>
                                        </span>
                                        <h4 class="event-heading"><a href="#">@item.codincidente</a> <small><a href="#"></a></small></h4>
                                        <p class="fs-sm text-muted">@item.fecharegistro</p>
                                        <p class="fs-mini">
                                            @item.descripcion
                                        </p>
                                        <footer>
                                            <ul class="post-links">
                                                <li><span class="text-danger"> Registrado por: </span></li>
                                                <li><span class="text-success"><i class="fa fa-barcode"></i> @item.nombreusuario</span></li>
                                            </ul>
                                        </footer>
                                    </section>
                                </li>
                                
                            }
                        }
            
                      
                    </ul>
                   
            </div>
      </div>
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cerrar</button>
    </div>
}