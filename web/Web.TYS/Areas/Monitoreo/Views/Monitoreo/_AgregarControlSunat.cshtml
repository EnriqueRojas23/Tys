@model Web.TYS.Areas.Monitoreo.Models.EmbarqueModel

@section Styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jsTree/style.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/iCheck/custom.css")" />


}

@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/jsTree/jstree.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/iCheck/icheck.min.js")"></script>
}

@using (Ajax.BeginForm("AsignarDescarga", "Monitoreo", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @*<i class="fa fa-users fa-4x"></i>*@
        <h4 class="modal-title">Control Sunat</h4>
        <small class="font-bold">Selecciona las OTs o Manifiestos que desea agregar.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <section class="widget widget-chart-changes">
                    <div class="widget-body">
                        <div class="chart bg-danger btlr btrr">
                            <p class="chart-value"><i class="fa fa-caret-up"></i> @Model.conocimientoembarque</p>
                            <p class="chart-value-change">@Model.transporte</p>
                            @Html.HiddenFor(x=>x.idembarque)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5">
                            <h4 class="chart-title"><span class="fw-normal"></span></h4>
                            <p class="deemphasize"></p>
                        </div>
                    </div>


                    <div class="ibox float-e-margins">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">F.Control Sunat:</label>
                            <div class="col-md-4">
                                <div class="input-group date" id='dtpfechacomp'>
                                    <div class="input-group date">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        @Html.TextBoxFor(model => model.fechacontrolsunat, "{0:dd/MM/yyyy}", new { @placeholder = "Fec. Descarga", @class = "form-control", @required = "true" })
                                    </div>
                                </div>
                            </div>
                            <label class=" col-sm-2 control-label">Hora(24hrs):</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.horacontrolsunat, new { @placeholder = "00:00hrs", @class = "form-control" ,@required = "true"})
                            </div>
                        </div>
                        <div class="col-md-5">
                            <h4 class="chart-title"><span class="fw-normal">Manifiestos</span></h4>
                            <p class="deemphasize">Sin Control</p>
                        </div>
                        <div class="col-md-offset-2 col-md-5">
                            <h4 class="chart-title"><span class="fw-normal">Manifiestos</span></h4>
                            <p class="deemphasize">Con Control</p>
                        </div>
                        <div class="form-group">

                            <div class="col-md-4">
                                <div id="jstree_di">
                                    <div id="jstree_di"></div>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <button id="agregar_sunat" type="button" class="btn btn-block bg-success ">Asignar >></button>
                                <button id="quitar_sunat" type="button" class="btn btn-block bg-success "><< Desasignar</button>
                            </div>
                            <div class="col-md-4">
                                <div id="jstree_nod">
                                    <div id="jstree_nod"></div>

                                </div>
                            </div>
                        </div>
                        </div>
                </section>
            </div>
        </div>


            </div>
            <div class="modal-footer">
                <div class="col-md-offset-6 col-md-3">
                    <button id="btnGuardarControl" type="button" class="btn btn-block  btn-primary">  Guardar</button>
                </div>
                <div class="col-md-3">
                    <button type="button" class="btn btn-inverse btn-block " data-dismiss="modal"> Cerrar</button>
                </div>
                @*<button id="btnGuardarAsignacion"  type="submit" class="btn btn-primary btn-sm"><i class="fa fa-times-circle-o"></i>  Guardar</button>
                <button type="button" class="btn btn-inverse btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cerrar</button>*@
            </div>
            }
