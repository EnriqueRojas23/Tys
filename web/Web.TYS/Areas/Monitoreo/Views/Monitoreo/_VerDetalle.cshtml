@model Web.TYS.Areas.Seguimiento.Models.Seguimiento.OrdenTrabajoModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
<script type="text/javascript">


        var fcnUrlControlGrid = function (str, id)
        {
            var urlprincipal = '@Url.Action("GetControlDetailsGrid", "Seguimiento", new  { area = "Seguimiento" })';
            return urlprincipal + "?control=" + str + "&id=" + id;
        };



</script>
@using (Ajax.BeginForm("AsignarServicios", "Seguimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @*<i class="fa fa-users fa-4x"></i>*@
        <h4 class="modal-title">Detalle de la Orden</h4>
        <small class="font-bold">Muestra el detalle de la orden de transporte.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <section class="widget widget-chart-changes">
                    <div class="widget-body">
                        <div class="chart bg-danger btlr btrr">
                            <p class="chart-value"><i class="fa fa-caret-up"></i> @Model.numcp</p>
                            <p class="chart-value-change">@Model.razonsocialdestinatario</p>
                        </div>

                        <h4 class="chart-title"><span class="fw-normal">@Model.nombrechofer</span></h4>
                        <p class="deemphasize">Chofer</p>


                        <div class="mt">
                            <div class="row">
                                <div class="col-xs-3">
                                    <p class="h4 no-margin">@Model.bultogeneral</p>
                                    <p class="deemphasize">Bultos</p>
                                </div>
                                <div class="col-xs-3">
                                    <p class="h4 no-margin">@Model.pesogeneral kg.</p>
                                    <p class="deemphasize">Peso General</p>
                                </div>
                                <div class="col-xs-3 text-align-right">
                                    <p class="h4 no-margin">@Model.volgeneral m3</p>
                                    <p class="deemphasize">Volumen General</p>
                                </div>


                            </div>
                        </div>
                        <div class="mt">
                            <div class="row">
                                <div class="col-xs-3">
                                </div>
                                <div class="col-xs-3">
                                    <p class="h4 no-margin">@Model.pesogeneral kg.</p>
                                    <p class="deemphasize">Peso Total</p>
                                </div>
                                <div class="col-xs-3 text-align-right">
                                    <p class="h4 no-margin">@Model.volgeneral m3</p>
                                    <p class="deemphasize">Volumen Total</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </section>
                @*





                <label class="col-md-1">Tipo:</label>
                <label class="col-md-2">@Model.tipo</label>*@

            
            </div>
            

        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="griddetallepu"
                       data-dataurl="@Url.Action("JsonGetListarGuiasOrden", "Seguimiento")"></table>

                <div id="griddetallepupager"></div>
            </div>
           
         </div>

        </div>
            <div class="modal-footer">
                <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cerrar</button>
            </div>
}
